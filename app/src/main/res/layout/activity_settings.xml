<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark"
    android:backgroundTint="?attr/colorPrimaryDark"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/common_title_back_set"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:alpha="0.975"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/title_box"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageButton
                    android:id="@+id/back_btn_set"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow_back_whit" />

                <ImageButton
                    android:id="@+id/info_btn_set"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_info" />

                <TextView
                    android:id="@+id/element_title"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryDark"
        android:backgroundTint="?attr/colorPrimaryDark"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:backgroundTint="?attr/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personalization_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="?attr/colorPrimary"
                android:elevation="2dp"
                android:paddingStart="18dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/personalization_settings"
                android:textAllCaps="true"
                android:textColor="?attr/colorAccent"
                android:textStyle="normal|bold" />

            <RelativeLayout
                android:id="@+id/themes_settings"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/colorPrimary"
                android:foreground="@drawable/d_ripple"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/quick_download_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/theme_settings_icon"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/ic_themes" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/settings_item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="Themes"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/settings_item_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="Select Theme"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favorite_settings"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/colorPrimary"
                android:foreground="@drawable/d_ripple"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/favorite_setting_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/favorite_settings_icon"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/ic_star" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/settings_favorite_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="Favorite Bar"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/settings_favorite_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="Personalise the favorite bar"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider_view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/offline_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/colorPrimary"
                android:foreground="@drawable/d_ripple"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/ic_data" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="Offline Mode"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="Disables loading of images"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/offline_internet_switch"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="18dp"
                        android:gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/other_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="?attr/colorPrimary"
                android:paddingStart="18dp"
                android:paddingTop="12dp"
                android:elevation="2dp"
                android:paddingBottom="12dp"
                android:text="@string/other_settings"
                android:textAllCaps="true"
                android:textColor="?attr/colorAccent"
                android:textStyle="normal|bold" />

            <RelativeLayout
                android:id="@+id/clear_cache_settings"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/colorPrimary"
                android:foreground="@drawable/d_ripple"
                android:layout_height="match_parent"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/cache_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/clear_cache_settings_icon"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/ic_close" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/clear_cache_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="@string/clear_cache_title"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/clear_cache_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="@string/clear_cache_text"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/submit_settings"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/colorPrimary"
                android:foreground="@drawable/d_ripple"
                android:layout_height="match_parent"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/submit_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/submit_settings_icon"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/ic_bug" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/submit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="@string/submit_title"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/submit_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="@string/submit_text"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/licenses_settings"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/colorPrimary"
                android:foreground="@drawable/d_ripple"
                android:layout_height="match_parent"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/licenses_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/licenses_settings_icon"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/overview_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/licenses_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="@string/licenses_title"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/licenses_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="@string/licenses_text"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/experimental_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/exp_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/texperimental_settings_icon"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="?attr/colorPrimary"
                        android:backgroundTint="?attr/colorPrimary"
                        android:padding="18dp"
                        android:tint="?attr/actionMenuTextColor"
                        app:srcCompat="@drawable/ic_experimental" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/experimental_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="4dp"
                            android:text="@string/experimental_title"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/experimentalcontent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.5"
                            android:paddingEnd="18dp"
                            android:text="@string/experimental_text"
                            android:textColor="?attr/actionMenuTextColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider_view22"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/theme_panel"
        layout="@layout/theme_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="100dp"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>