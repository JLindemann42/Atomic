<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="100dp"
    android:orientation="vertical">

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/theme_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:clickable="true"
        android:focusable="true"
        app:realtimeBlurRadius="4dp"
        app:realtimeOverlayColor="#A80B0B0B" />

    <LinearLayout
        android:id="@+id/themepanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_weight="0.6"
            android:background="@drawable/toast"
            android:backgroundTint="?attr/colorPrimary"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:text="Select Theme"
                android:textAlignment="center"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/system_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/toast"
                android:backgroundTint="?attr/colorAccent"
                android:backgroundTintMode="src_in"
                android:clickable="true"
                android:elevation="1dp"
                android:focusable="true"
                android:fontFamily="@font/manroperegular"
                android:foreground="@drawable/c_ripple"
                android:foregroundTintMode="src_in"
                android:hapticFeedbackEnabled="true"
                android:onClick="onClick"
                android:text="System Default"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary" />

            <Button
                android:id="@+id/light_btn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/toast"
                android:backgroundTint="?attr/colorAccent"
                android:backgroundTintMode="src_in"
                android:clickable="true"
                android:elevation="1dp"
                android:focusable="true"
                android:fontFamily="@font/manroperegular"
                android:foreground="@drawable/c_ripple"
                android:foregroundTintMode="src_in"
                android:hapticFeedbackEnabled="true"
                android:onClick="onClick"
                android:text="Light"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary" />

            <Button
                android:id="@+id/dark_btn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/toast"
                android:backgroundTint="?attr/colorAccent"
                android:backgroundTintMode="src_in"
                android:clickable="true"
                android:elevation="1dp"
                android:focusable="true"
                android:fontFamily="@font/manroperegular"
                android:foreground="@drawable/c_ripple"
                android:foregroundTintMode="src_in"
                android:hapticFeedbackEnabled="true"
                android:onClick="onClick"
                android:text="Dark"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

        </FrameLayout>
    </LinearLayout>

</FrameLayout>