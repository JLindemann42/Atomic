<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp"
            android:background="?attr/colorPrimary"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include
                    layout="@layout/solubility_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <include
                                layout="@layout/solubility_group_1"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/solubility_group_2"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/solubility_group_3"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/solubility_group_4"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/solubility_group_5"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/solubility_group_6"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/solubility_group_7"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </ScrollView>

                </HorizontalScrollView>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/commom_title_back"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            android:fitsSystemWindows="true"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/status_place"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:elevation="0dp"
                        android:src="@drawable/ic_arrow_back_white"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabSize="normal" />

                    <TextView
                        android:id="@+id/element_title"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="Solubility Table"
                        android:textAlignment="center"
                        android:textColor="?attr/actionMenuTextColor"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>