<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        android:id="@+id/view_sub"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryDark">

    <FrameLayout
            android:id="@+id/common_title_back_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:alpha="1"
            android:elevation="@dimen/title_bar_elevation"
            android:background="?attr/colorPrimary"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/title_box"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar">

                    <ImageButton
                        android:id="@+id/back_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back_whit" />

                    <TextView
                        android:id="@+id/element_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/title_bar"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="@string/activity_table_title"
                        android:textAlignment="center"
                        android:textColor="?attr/actionMenuTextColor"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ele_table"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/first_item"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space"
            android:background="@drawable/toast"
            android:backgroundTint="?attr/colorPrimary"
            android:clickable="true"
            android:elevation="@dimen/default_card_elevation"
            android:focusable="true"
            android:foreground="@drawable/c_ripple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="98dp"
                android:text="@string/table_electrochemical"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/equ_table"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space"
            android:background="@drawable/toast"
            android:backgroundTint="?attr/colorPrimary"
            android:clickable="true"
            android:elevation="@dimen/default_card_elevation"
            android:focusable="true"
            android:foreground="@drawable/c_ripple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="98dp"
                android:text="@string/table_equations"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sol_table"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space"
            android:background="@drawable/toast"
            android:backgroundTint="?attr/colorPrimary"
            android:clickable="true"
            android:elevation="@dimen/default_card_elevation"
            android:focusable="true"
            android:foreground="@drawable/c_ripple">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="98dp"
                android:text="@string/table_solubility"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>


    </LinearLayout>

</FrameLayout>
