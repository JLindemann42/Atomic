<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/colorLightPrimary</item>
        <item name="android:statusBarColor">@color/colorLightPrimary</item>
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDark</item>
        <item name="colorAccent">@color/colorLightAccent</item>
        <item name="actionMenuTextColor">@color/colorLightText</item>>
        <item name="android:fontFamily">@font/manropefamily</item>
        <item name="rippleColor">@color/colorLightRipple</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="actionMenuTextColor">@color/colorDarkText</item>
        <item name="android:navigationBarColor">@color/colorDarkPrimary</item>
        <item name="android:statusBarColor">@color/colorDarkPrimary</item>
        <item name="rippleColor">@color/colorDarkRipple</item>
    </style>

    <style name="ToggleStyle"></style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:navigationBarColor">@color/colorLightPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <declare-styleable name="ShadowView">
        <attr name="shadowDx" format="dimension" />
        <attr name="shadowDy" format="dimension" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="shadowAlpha" format="integer" />
    </declare-styleable>

</resources>
