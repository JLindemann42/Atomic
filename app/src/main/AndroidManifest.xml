<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jlindemann.science">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_blue"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_blue_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="MAINACTIVITY"
            />

        <activity android:name="com.jlindemann.science.activities.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ElementInfoActivity"
            android:label="ELEMENTINFOACTIVITY" />

        <activity
            android:name=".activities.SettingsActivity"
            android:label="SETTINGS" />

        <activity
            android:name=".activities.FavoritePageActivity"
            android:label="FAVORITEPAGE" />

        <activity
            android:name=".activities.SolubilityActivity"
            android:label="SOLUBILITYPAGE" />


    </application>

</manifest>